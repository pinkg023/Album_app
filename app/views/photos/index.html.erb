<table class="table table-striped table-condensed">
 <% @photos.each do |photo| %>
   <tr>
     <td style='text-align:center;vertical-align:middle'><%= photo.title %></td>
     <td style='text-align:center;vertical-align:middle'><%= image_tag photo.file_location.url, size: "140x140", class: "img-thumbnail" %></td>
     <td style='text-align:center;vertical-align:middle'><%= link_to 'Show', photo_path(photo) %></td>
     <td style='text-align:center;vertical-align:middle'><%= link_to 'Edit', edit_photo_path(photo) %></td>
     <td style='text-align:center;vertical-align:middle'><%= link_to 'Destroy', photo_path(photo), method: :delete, data:{ confirm: "Are you sure?" } %></td>
   </tr>
 <% end %>
</table>

<%= link_to 'New Photo', new_photo_path %>